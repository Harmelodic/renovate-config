{
	"assignees": [
		"Harmelodic"
	],
	"automerge": true,
	"automergeStrategy": "squash",
	"automergeType": "pr",
	"extends": [
		"config:base"
	],
	"packageRules": [
		{
			"groupName": "all",
			"groupSlug": "all",
			"matchPackagePatterns": [
				"*"
			]
		},
		{
			"allowedVersions": "!/^4\\.5\\.0$/",
			"description": "Block broken PACT 4.5.0",
			"matchPackageNames": [
				"au.com.dius.pact.consumer:junit5",
				"au.com.dius.pact.provider:junit5spring",
				"au.com.dius.pact.provider:maven"
			]
    		}
	],
	"platformAutomerge": true,
	"pruneBranchAfterAutomerge": true,
	"reviewersFromCodeOwners": true,
	"regexManagers": [
		{
			"datasourceTemplate": "docker",
			"description": "Maven > jib-maven-plugin > from image",
			"fileMatch": [
				"^pom.xml$"
			],
			"matchStrings": [
				"<from>(\\s*)<image>(\\s*)(?<depName>.*?):(?<currentValue>.*?)@(?<currentDigest>sha256:[a-f0-9]+)(\\s*)<\\/image>"
			]
		}
	],
	"separateMajorMinor": false
}
